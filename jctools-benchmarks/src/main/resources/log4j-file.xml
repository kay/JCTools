<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp"
    packages="">
    <Appenders>
        <File name="File1" fileName="file.log">
            <PatternLayout pattern="%d{DEFAULT} [%thread] %logger - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="File1" />
        </Root>
    </Loggers>
</Configuration>