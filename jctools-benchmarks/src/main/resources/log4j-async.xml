<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp"
    packages="">
    <Appenders>
        <File name="File1" fileName="async.log">
            <PatternLayout pattern="%d{DEFAULT} [%thread] %logger - %msg%n" />
        </File>
        <Async name="Async">
            <AppenderRef ref="File1" />
        </Async>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Async" />
        </Root>
    </Loggers>
</Configuration>