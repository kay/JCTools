<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp"
    packages="org.jctools.proxy.logger">
    <Appenders>
        <File name="File1" fileName="logs/async-jctools.log" immediateFlush="false">
            <PatternLayout pattern="%d{DEFAULT} [%thread] %logger - %msg%n" />
        </File>
        <Async name="Async" bufferSize="262144">
            <AppenderRef ref="File1" />
            <JCToolsBlockingQueue/>
        </Async>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Async" />
        </Root>
    </Loggers>
</Configuration>